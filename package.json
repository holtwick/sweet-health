{
  "name": "sweet-health",
  "type": "module",
  "version": "0.1.0",
  "private": false,
  "description": "Simple CGM Monitor: A Glucose Tracking Solution for Diabetes Management and Personal Optimization",
  "author": {
    "email": "dirk.holtwick@gmail.com",
    "name": "Dirk Holtwick",
    "url": "https://holtwick.de"
  },
  "scripts": {
    "build": "cross-env MODE=production nr build:basis",
    "build:basis": "nr clean && zerva build src/zerva/index.ts --external better-sqlite3 && vite build --mode $MODE",
    "build:docker": "cross-env MODE=production-docker nr build:basis && ./scripts/make-docker.sh",
    "build:icons": "pwa-assets-generator",
    "check": "vue-tsc --noEmit -p ./tsconfig.json",
    "clean": "rm -rf dist www",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "loc": "nlx vue-i18n-extract report --vueFiles './src/**/*.?(js|ts|vue)' --languageFiles './locales/*.?(json|yml|yaml)'",
    "loc:fix": "nlx vue-i18n-extract report --add --vueFiles './src/**/*.?(js|ts|vue)' --languageFiles './locales/*.?(json|yml|yaml)'",
    "preview": "vite preview",
    "reset": "rm -rf node_modules pnpm-lock.yaml dist dist_www www",
    "serve": "cross-env ZEED=* LEVEL=a node dist/main.cjs",
    "start": "nr start:node",
    "start:bun": "cross-env DEBUG=1 ZEED=* LEVEL=a zerva src/zerva/index.ts --debug --bun --external bun:sqlite",
    "start:node": "cross-env DEBUG=1 ZEED=* LEVEL=a zerva src/zerva/index.ts --debug --external better-sqlite3",
    "test": "vitest"
  },
  "dependencies": {
    "@vueuse/core": "^10.11.0",
    "@zerva/rpc": "^0.56.0",
    "@zerva/websocket": "^0.56.1",
    "apexcharts": "^3.52.0",
    "lucide-vue-next": "^0.424.0",
    "oui-kit": "^0.22.0",
    "vue": "^3.4.35",
    "vue-i18n": "^9.13.1",
    "vue-router": "^4.4.2",
    "zeed": "^0.23.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.24.1",
    "@antfu/ni": "^0.22.0",
    "@types/bun": "^1.1.6",
    "@types/node": "^22.1.0",
    "@vite-pwa/assets-generator": "^0.2.4",
    "@vitejs/plugin-vue": "^5.1.2",
    "@zerva/bin": "^0.56.0",
    "@zerva/core": "^0.56.0",
    "@zerva/http": "^0.56.0",
    "@zerva/sqlite": "^0.56.0",
    "@zerva/sqlite-bun": "^0.56.0",
    "@zerva/vite": "^0.56.0",
    "better-sqlite3": "^11.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.8.0",
    "stylus": "^0.63.0",
    "typescript": "^5.5.4",
    "vite": "^5.3.5",
    "vitest": "^2.0.5",
    "vue-tsc": "^2.0.29"
  }
}
